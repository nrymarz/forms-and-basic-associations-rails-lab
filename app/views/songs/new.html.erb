<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <label for='song_notes_1'>Note</label>
  <input type='text' id='song_notes_1' name="song[song_notes][]">
  <label for='song_notes_2'>Note</label>
  <input type='text' id='song_notes_2' name="song[song_notes][]">
  

  <%= f.submit %>
<% end %>


